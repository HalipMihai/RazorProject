@page
@model RazorProject.Pages.Enclosures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.Identity!.IsAuthenticated)
    {
        <a asp-page="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure[0].Capacity)
            </th>
            <th>
                # of dogs
            </th>
            @if (User.Identity!.IsAuthenticated)
            {
            <th>
                Actions
            </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enclosure) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dogs.Count)
            </td>
            @if (User.Identity!.IsAuthenticated)
            {
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            }
            </tr>
}
    </tbody>
</table>
