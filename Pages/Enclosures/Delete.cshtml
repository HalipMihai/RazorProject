@page
@model RazorProject.Pages.Enclosures.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Enclosure.Dogs!.Count > 0)
{
    <h3>Move dogs to other enclosures before deleting this one</h3>
}
else
{
    <h3>Are you sure you want to delete this?</h3>
}

<div>
    <h4>Enclosure</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enclosure.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enclosure.Capacity)
        </dd>
    </dl>
 
@if (Model.Enclosure.Dogs!.Count == 0)
{
    <form method="post">
        <input type="hidden" asp-for="Enclosure.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
}

</div>
