@page
@model RazorProject.Pages.AdoptionContracts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AdoptionContract</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdoptionContract.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdoptionContract.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdoptionContract.Person)
        </dt>
        <dd class="col-md-10">
            @Model.AdoptionContract.Person!.FirstName @Model.AdoptionContract.Person!.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdoptionContract.Dog)
        </dt>
        <dd class="col-md-10">
            Name: @Model.AdoptionContract.Dog!.Name / Race: @Model.AdoptionContract.Dog!.Race
        </dd>

    </dl>

    <form method="post">
        <div class="form-group">
            <input type="submit" value="Download PDF" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
